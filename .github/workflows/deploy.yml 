name: Deploy Vue to GitHub Pages

on:
  push:
    branches:
      - feat/skapa-array-med-packages  # This will trigger the workflow when you push to the 'development' branch

jobs:
  build_vue:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 20.10.0 # Ensure this matches your projectâ€™s Node version

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: npm run build

      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@v4
        with:
          branch: feat/skapa-array-med-packages  # The branch where your site is deployed (you can change this if needed)
          folder: dist      # The build folder that gets deployed